<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_passenger"
    android:background="#425C5A"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Login"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:textColor="#FFC3A2"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/topleft_botleft"
                android:src="@drawable/ic_baseline_call_24"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:hint="Phone Number"
                android:background="@drawable/topright_botright"
                android:textSize="20dp"

                android:paddingLeft="20dp"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/topleft_botleft"
                android:src="@drawable/ic_baseline_lock_24"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:hint="Password"
                android:background="@drawable/topright_botright"
                android:textSize="20dp"
                android:password="true"
                android:paddingLeft="20dp"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/chkRememerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Forgot Password?"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#ffc3a2"
        android:text="Login"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>





</LinearLayout>