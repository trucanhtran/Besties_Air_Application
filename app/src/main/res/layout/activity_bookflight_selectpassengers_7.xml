<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/me1"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/flightdetailshape"
        android:layout_marginTop="250dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:layout_marginLeft="25dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#9C000000"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sydney"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(SYD)"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 6/12/2020"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2 Adults"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotion"
                android:layout_marginLeft="25dp"/>


        </LinearLayout>


        <ImageView
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:src="@drawable/me2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="#9C000000"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:20 PM"
                android:textColor="#9C000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:textStyle="bold"
                android:textColor="@color/bg"
                android:paddingLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LCY"
                android:textStyle="bold"
                android:textColor="@color/bg"
                android:paddingLeft="34dp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginRight="-20dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg" />



            <CheckBox
                android:id="@+id/chkRoundtrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roundtrip"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Return"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="18dp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="490dp"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:background="@drawable/shapselectpassengers"
        android:layout_marginTop="500dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:text="Select passenger"
        android:textSize="18dp"
        android:paddingTop="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="340dp"
        android:src="@drawable/ic_baseline_clear_24_1"
        android:background="#0000"/>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/edit_text"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_accessibility_new_24" />
        <TextView
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:text="Adult"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />
        <ImageButton
            android:id="@+id/btnAddAdult"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_24" />
        <TextView
            android:id="@+id/txtAldult"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="1"
            android:gravity="center"
            android:background="@color/text"/>
        <ImageButton
            android:id="@+id/btnRemoveAldult"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_remove_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/edit_text"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/children" />
        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Children"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />
        <ImageButton
            android:id="@+id/btnAddChildren"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_24" />
        <TextView
            android:id="@+id/txtChildren"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="1"
            android:gravity="center"
            android:background="@color/text"/>
        <ImageButton
            android:id="@+id/btnRemoveChildren"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_remove_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/edit_text"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/baby" />
        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Infant"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />
        <ImageButton
            android:id="@+id/btnAddInfrant"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_24" />
        <TextView
            android:id="@+id/txtInfrant"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="1"
            android:gravity="center"
            android:background="@color/text"/>
        <ImageButton
            android:id="@+id/btnRemoveInfrant"
            android:background="#0000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_remove_24" />
    </LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="558dp"
        android:layout_marginLeft="90dp"
        android:text="12+ year of the time travel"
        android:textColor="#a6a9b6"
        android:textSize="14sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="90dp"
        android:text="2-11 year of the time travel"
        android:textColor="#a6a9b6"
        android:textSize="14sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="90dp"
        android:text="Under 2 year of the time travel"
        android:textColor="#a6a9b6"
        android:textSize="13sp"
        android:textStyle="italic"/>
    <View
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="530dp"
        android:background="#a6a9b6"
        android:paddingLeft="10dp" />


</RelativeLayout>