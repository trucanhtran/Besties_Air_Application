<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:padding="-10dp"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="-5dp"
            android:background="@color/white"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_clear_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="-60dp"
            android:text="Flight Detail"
            android:textColor="@color/bg"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/me1"
        android:paddingTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/flightdetailshape"
        android:layout_marginTop="222dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="-5dp"
            android:layout_marginLeft="11dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#9C000000"
                android:textSize="12sp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sydney"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(SYD)"
                android:textColor="@color/bg"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:background="#a6a9b6"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:paddingLeft="24dp"
                android:textColor="@color/bg"
                android:text="Sun - 06 December"/>

        </LinearLayout>

        <ImageView
            android:layout_width="123dp"
            android:layout_height="150dp"
            android:src="@drawable/me2" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:20 PM"
                android:textColor="#9C000000"
                android:paddingLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:textStyle="bold"
                android:textColor="@color/bg"
                android:paddingLeft="43dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(LCY)"
                android:textStyle="bold"
                android:textColor="@color/bg"
                android:paddingLeft="59dp"/>

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#a6a9b6"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginLeft="9dp"
                android:textColor="@color/bg"
                android:text="Sun - 06 December"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#9C000000"

            android:text="Passenger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ms Phuong Nguyen"
            android:textStyle="bold"
            android:textColor="@color/bg"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#a6a9b6"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C000000"
                    android:text="Total Price"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C000000"
                    android:layout_marginLeft="210dp"
                    android:text="Seat"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg"
                    android:textStyle="bold"
                    android:text="$ 310.00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg"
                    android:textStyle="bold"
                    android:layout_marginLeft="220dp"
                    android:text="A1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C000000"
                    android:text="Class"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C000000"
                    android:text="Gate"
                    android:textSize="13dp"
                    android:layout_marginLeft="100dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C000000"
                    android:layout_marginLeft="85dp"
                    android:text="Baggage"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg"
                    android:textStyle="bold"
                    android:text="Business"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg"
                    android:textStyle="bold"
                    android:layout_marginLeft="80dp"
                    android:text="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg"
                    android:textStyle="bold"
                    android:layout_marginLeft="90dp"
                    android:text="x2 30kg"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#a6a9b6"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qr"/>
    </LinearLayout>
</RelativeLayout>